{
    "coc.source.word.filetypes": [
        "text",
        "markdown"
    ],
	"python.jediEnabled": false,
	"languageserver": {
		"fortran": {
			"command": "fortls",
            "args":["--use_signature_help"],
			"filetypes": [
				"fortran"
			],
			"rootPatterns": [
				".fortls",
				".git/"
			]
		},
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"cuda",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls-root",
				"compile_commands.json"
			],
			"initializationOptions": {
				"cache": {
					"directory": ".ccls-cache"
				}
			}
		}
	}
}
